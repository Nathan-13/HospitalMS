@model DoctorViewModel

@{
    string pageTitle = "New Doctor";
    string action = "Create";

    if (ViewBag.IsEditing == true) {
        pageTitle = "Edit Doctor";
        action ="Edit";
    }
    
}

<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <input type="hidden" asp-for="DoctorId"/>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DoctorName">Doctor Name</label>
                    <input type="text" class="form-control" asp-for="DoctorName" placeholder="Dr. Firstname Lastname">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input type="text" class="form-control" asp-for="Email">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Specialty">Specialty</label>
                <input type="text" class="form-control" asp-for="Specialty">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input type="text" class="form-control bfh-phone" value="13065734562" data-format="+1 (ddd) ddd-dddd">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DateJoin">Join Date</label>
                    <input class="form-control" type="date" value="2011-08-19" asp-for="DateJoin"/>
                </div>
            </div>
            <div class="form-row">
                <label asp-for="Descriptions">Descriptions</label>
                <textarea class="form-control" asp-for="Descriptions" rows="20" cols="50"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a class="btn btn-primary" asp-action="Index">Our Doctors</a>
    </div>
</div>

